<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travel System</title>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Our custom theme -->
    <link rel="stylesheet" href="~/css/travel-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/favicon.png" />
</head>
<body>
    <header>
        <nav class="navbar modern-navbar navbar-expand-lg fixed-top" id="mainNavbar">
            <div class="container">
                <a class="navbar-brand modern-brand" asp-area="" asp-page="/Index">
                    <i class="fas fa-plane me-2"></i>
                    <span class="brand-text">Travel System</span>
                </a>
                
                <button class="navbar-toggler modern-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="toggler-line"></span>
                    <span class="toggler-line"></span>
                    <span class="toggler-line"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link modern-nav-link" asp-area="" asp-page="/Index">
                                <i class="fas fa-home me-1"></i>
                                <span>Home</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link modern-nav-link" asp-area="" asp-page="/Destinations/Index">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                <span>Destinations</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link modern-nav-link" asp-area="" asp-page="/Trips/Index">
                                <i class="fas fa-suitcase me-1"></i>
                                <span>Trips</span>
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link modern-nav-link" asp-area="" asp-page="/Trips/MyBookings">
                                    <i class="fas fa-calendar-check me-1"></i>
                                    <span>My Bookings</span>
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link modern-nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" 
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-cogs me-1"></i>
                                    <span>Admin</span>
                                </a>
                                <ul class="dropdown-menu modern-dropdown" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item modern-dropdown-item" asp-area="" asp-page="/Destinations/Index">
                                        <i class="fas fa-map me-2"></i>Manage Destinations</a></li>
                                    <li><a class="dropdown-item modern-dropdown-item" asp-area="" asp-page="/Trips/Index">
                                        <i class="fas fa-route me-2"></i>Manage Trips</a></li>
                                    <li><a class="dropdown-item modern-dropdown-item" asp-area="" asp-page="/Admin/Guides/Index">
                                        <i class="fas fa-user-tie me-2"></i>Manage Guides</a></li>
                                    <li><a class="dropdown-item modern-dropdown-item" asp-area="" asp-page="/Admin/GuideAssignments/Index">
                                        <i class="fas fa-user-plus me-2"></i>Guide Assignments</a></li>
                                    <li><a class="dropdown-item modern-dropdown-item" asp-area="" asp-page="/Trips/MyBookings">
                                        <i class="fas fa-list-alt me-2"></i>Bookings Overview</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item modern-dropdown-item" asp-area="" asp-page="/Admin/Logs/Index">
                                        <i class="fas fa-file-text me-2"></i>System Logs</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    
    <!-- Navbar spacer for fixed positioning -->
    <div class="navbar-spacer"></div>
    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>
    
    <!-- Footer spacer for uniform spacing -->
    <div class="footer-spacer"></div>

    <footer class="modern-footer">
        <div class="footer-gradient">
            <div class="container">
                <div class="row gy-4 justify-content-center">
                    <!-- Company Info Section -->
                    <div class="col-lg-5 col-md-6">
                        <div class="footer-brand">
                            <h5 class="footer-title">
                                <i class="fas fa-plane me-2"></i>
                                Travel System
                            </h5>
                            <p class="footer-description">
                                Your ultimate travel companion for discovering amazing destinations 
                                and creating unforgettable experiences around the world.
                            </p>
                            <!-- Quick Links inline -->
                            <div class="footer-quick-links">
                                <a asp-area="" asp-page="/Index">Home</a>
                                <a asp-area="" asp-page="/Destinations/Index">Destinations</a>
                                <a asp-area="" asp-page="/Trips/Index">Trips</a>
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <a asp-area="" asp-page="/Trips/MyBookings">My Bookings</a>
                                }
                                <a asp-area="" asp-page="/Privacy">Privacy</a>
                            </div>
                        </div>
                    </div>

                    <!-- Newsletter Section -->
                    <div class="col-lg-4 col-md-6">
                        <h6 class="footer-section-title">Stay Updated</h6>
                        <p class="newsletter-text">
                            Subscribe to get the latest travel deals and destination updates.
                        </p>
                        <div class="newsletter-form">
                            <div class="input-group">
                                <input type="email" class="form-control newsletter-input" 
                                       id="newsletterEmail" placeholder="Enter your email" aria-label="Email">
                                <button class="btn btn-newsletter" type="button" onclick="subscribeNewsletter()">
                                    <i class="fas fa-paper-plane"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer Bottom -->
                <hr class="footer-divider">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <div class="footer-copyright">
                            <i class="fas fa-copyright me-1"></i>
                            Travel Organization System. 
                            <span class="text-accent">Developed by Matija Sokol</span>
                        </div>
                    </div>
                    <div class="col-md-4 text-md-end">
                        <div class="footer-badges">
                            <span class="badge-secure">
                                <i class="fas fa-lock me-1"></i>
                                Secure
                            </span>
                            <span class="badge-trusted">
                                <i class="fas fa-shield-alt me-1"></i>
                                Trusted
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Newsletter Thank You Modal -->
    <div class="modal fade" id="newsletterModal" tabindex="-1" aria-labelledby="newsletterModalLabel" aria-hidden="true" data-bs-backdrop="false">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content newsletter-modal">
                <div class="modal-header border-0">
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center p-4">
                    <div class="newsletter-success-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h4 class="newsletter-success-title">Thank You for Your Interest!</h4>
                    <p class="newsletter-success-message">
                        We appreciate your subscription to our newsletter. We'll send you the latest travel deals, 
                        destination updates, and exclusive offers when we publish our first newsletter.
                    </p>
                    <p class="newsletter-success-note">
                        <i class="fas fa-info-circle me-2"></i>
                        Stay tuned for amazing travel opportunities!
                    </p>
                    <button type="button" class="btn btn-primary btn-animated" data-bs-dismiss="modal">
                        <i class="fas fa-thumbs-up me-2"></i>Got it!
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/imageErrorHandler.js" asp-append-version="true"></script>

    @* Hot reload browser refresh script for development *@
    @if (Environment.GetEnvironmentVariable("__ASPNETCORE_BROWSER_TOOLS") is not null)
    {
        <script src="/_framework/aspnetcore-browser-refresh.js"></script>
    }

    @await RenderSectionAsync("Scripts", required: false)
    
    <script>
        // Modern sticky navbar with hide/show on scroll
        let lastScrollTop = 0;
        const navbar = document.getElementById('mainNavbar');
        let isScrolling = false;

        window.addEventListener('scroll', function() {
            if (!isScrolling) {
                window.requestAnimationFrame(function() {
                    const currentScroll = window.pageYOffset || document.documentElement.scrollTop;
                    
                    if (currentScroll > lastScrollTop && currentScroll > 100) {
                        // Scrolling down & past threshold - hide navbar
                        navbar.style.transform = 'translateY(-100%)';
                    } else {
                        // Scrolling up or at top - show navbar
                        navbar.style.transform = 'translateY(0)';
                    }
                    
                    lastScrollTop = currentScroll <= 0 ? 0 : currentScroll; // For Mobile or negative scrolling
                    isScrolling = false;
                });
                isScrolling = true;
            }
        });
    </script>
</body>
</html>