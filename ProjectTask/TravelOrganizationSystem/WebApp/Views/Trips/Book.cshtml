@model WebApp.ViewModels.TripBookViewModel
@{
    ViewData["Title"] = "Book Trip";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger dark-theme-alert" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@Model.ErrorMessage
                </div>
            }

            @if (Model.Trip != null)
            {
                <div class="dark-theme-card">
                    <div class="card-header border-0" style="background: rgba(46, 204, 113, 0.1);">
                        <h4 class="mb-0 fw-bold" style="color: #2ecc71;">
                            <i class="fas fa-ticket-alt me-2"></i>Book Your Trip
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-md-4">
                                @if (!string.IsNullOrEmpty(Model.Trip.ImageUrl))
                                {
                                    <img src="@Model.Trip.ImageUrl" class="img-fluid rounded" alt="@Model.Trip.Title">
                                }
                                else
                                {
                                    <div class="d-flex justify-content-center align-items-center rounded" style="height: 200px; background: linear-gradient(135deg, rgba(52, 152, 219, 0.2), rgba(46, 204, 113, 0.2));">
                                        <i class="fas fa-plane-departure fa-3x" style="color: #3498db; opacity: 0.7;"></i>
                                    </div>
                                }
                            </div>
                            <div class="col-md-8">
                                <h5 class="fw-bold" style="color: #3498db;">@Model.Trip.Title</h5>
                                <p style="color: #bdc3c7;">
                                    <i class="fas fa-map-marker-alt me-1"></i>@Model.Trip.DestinationName
                                </p>
                                <p style="color: #bdc3c7;">
                                    <i class="fas fa-calendar-alt me-1"></i>@Model.Trip.StartDate.ToString("MMM d") - @Model.Trip.EndDate.ToString("MMM d, yyyy")
                                </p>
                                <p style="color: #2ecc71; font-size: 1.5rem; font-weight: bold;">
                                    <i class="fas fa-tag me-1"></i>@Model.Trip.FormattedPrice per person
                                </p>
                                <p style="color: #bdc3c7;">
                                    <i class="fas fa-users me-1"></i>@Model.Trip.AvailableSlots spots remaining
                                </p>
                            </div>
                        </div>

                        <div id="bookingError" class="alert alert-danger d-none" role="alert"></div>
                        <div id="bookingSuccess" class="alert alert-success d-none" role="alert"></div>

                        <form id="bookingForm" class="dark-theme-form">
                            <input type="hidden" asp-for="TripId" />

                            <div class="mb-4">
                                <label asp-for="NumberOfParticipants" class="form-label fw-medium" style="color: #ecf0f1;">
                                    <i class="fas fa-user-friends me-1"></i>Number of Participants
                                </label>
                                <select asp-for="NumberOfParticipants" class="form-select">
                                    @for (int i = 1; i <= Math.Min(10, Model.Trip.AvailableSlots); i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>

                            <div class="d-grid gap-2 d-md-flex">
                                <button type="button" id="confirmBookingBtn" class="btn btn-success btn-lg flex-fill">
                                    <i class="fas fa-check me-2"></i>Confirm Booking
                                </button>
                                <a asp-controller="Trips" asp-action="Details" asp-route-id="@Model.TripId" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-arrow-left me-2"></i>Back
                                </a>
                            </div>
                        </form>

                        <script>
                            document.getElementById('confirmBookingBtn').addEventListener('click', async function() {
                                const btn = this;
                                btn.disabled = true;
                                btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Booking...';

                                const tripId = document.getElementById('TripId').value;
                                const participants = document.getElementById('NumberOfParticipants').value;
                                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';

                                try {
                                    const response = await fetch('/Trips/Book/' + tripId, {
                                        method: 'POST',
                                        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                                        credentials: 'include',
                                        body: 'TripId=' + tripId + '&NumberOfParticipants=' + participants + '&__RequestVerificationToken=' + encodeURIComponent(token)
                                    });

                                    if (response.redirected) {
                                        window.location.href = response.url;
                                        return;
                                    }

                                    // Non-redirect 200 means the controller returned the form back (booking failed)
                                    document.getElementById('bookingError').textContent = 'Failed to book the trip. Please try again.';
                                    document.getElementById('bookingError').classList.remove('d-none');
                                    btn.disabled = false;
                                    btn.innerHTML = '<i class="fas fa-check me-2"></i>Confirm Booking';
                                } catch (err) {
                                    document.getElementById('bookingError').textContent = 'An error occurred: ' + err.message;
                                    document.getElementById('bookingError').classList.remove('d-none');
                                    btn.disabled = false;
                                    btn.innerHTML = '<i class="fas fa-check me-2"></i>Confirm Booking';
                                }
                            });
                        </script>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

