@model WebApp.ViewModels.CreateTripViewModel
@{
    ViewData["Title"] = "Create Trip";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="dark-theme-card">
                <div class="card-header border-0" style="background: rgba(46, 204, 113, 0.1);">
                    <h4 class="mb-0 fw-bold" style="color: #2ecc71;">
                        <i class="fas fa-plus-circle me-2"></i>Create New Trip
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Trips" asp-action="Create" class="dark-theme-form">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Trip.Title" class="form-label">Title</label>
                            <input asp-for="Trip.Title" class="form-control" />
                            <span asp-validation-for="Trip.Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Trip.Description" class="form-label">Description</label>
                            <textarea asp-for="Trip.Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Trip.Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Trip.StartDate" class="form-label">Start Date</label>
                                <input asp-for="Trip.StartDate" class="form-control" type="date" />
                                <span asp-validation-for="Trip.StartDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Trip.EndDate" class="form-label">End Date</label>
                                <input asp-for="Trip.EndDate" class="form-control" type="date" />
                                <span asp-validation-for="Trip.EndDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Trip.Price" class="form-label">Price (USD)</label>
                                <input asp-for="Trip.Price" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Trip.Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Trip.Capacity" class="form-label">Maximum Participants</label>
                                <input asp-for="Trip.Capacity" class="form-control" type="number" />
                                <span asp-validation-for="Trip.Capacity" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Trip.DestinationId" class="form-label">Destination</label>
                            <select asp-for="Trip.DestinationId" asp-items="Model.Destinations" class="form-select">
                                <option value="">-- Select Destination --</option>
                            </select>
                            <span asp-validation-for="Trip.DestinationId" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Trip.ImageUrl" class="form-label">Image URL (optional)</label>
                            <input asp-for="Trip.ImageUrl" class="form-control" />
                            <span asp-validation-for="Trip.ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex">
                            <button type="submit" class="btn btn-success btn-lg flex-fill">
                                <i class="fas fa-save me-2"></i>Create Trip
                            </button>
                            <a asp-controller="Trips" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
