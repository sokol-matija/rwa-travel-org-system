@model WebApp.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="auth-container">
    <div class="auth-card register-card">
        <div class="auth-header">
            <h2 class="glow-text">Join Our Travel Community</h2>
            <p>Create an account to start planning your dream adventures</p>
        </div>

        <div class="auth-body">
            <form method="post" asp-controller="Account" asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="FirstName" class="form-control animated-input" placeholder="First Name" />
                            <label asp-for="FirstName"></label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-floating">
                            <input asp-for="LastName" class="form-control animated-input" placeholder="Last Name" />
                            <label asp-for="LastName"></label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control animated-input" placeholder="Username" />
                    <label asp-for="Username"></label>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control animated-input" placeholder="Email" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control animated-input" placeholder="Password" />
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="ConfirmPassword" class="form-control animated-input" placeholder="Confirm Password" />
                    <label asp-for="ConfirmPassword"></label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="PhoneNumber" class="form-control animated-input" placeholder="Phone Number" />
                    <label asp-for="PhoneNumber"></label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Address" class="form-control animated-input" placeholder="Address" />
                    <label asp-for="Address"></label>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-check mb-4">
                    <input asp-for="AgreeToTerms" class="form-check-input" />
                    <label asp-for="AgreeToTerms" class="form-check-label">
                        I agree to the <a href="#" class="terms-link">terms and conditions</a>
                    </label>
                    <span asp-validation-for="AgreeToTerms" class="text-danger d-block"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg btn-animated">
                        <i class="fas fa-user-plus me-2"></i> Register
                    </button>
                </div>
            </form>

            <div class="auth-separator">
                <span>ALREADY HAVE AN ACCOUNT?</span>
            </div>

            <div class="d-grid">
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary btn-lg btn-animated">
                    <i class="fas fa-sign-in-alt me-2"></i> Log In
                </a>
            </div>
        </div>

        <div class="travel-bg register-bg"></div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
